<c:FragmentDefinition
    xmlns="sap.m"
    xmlns:c="sap.ui.core"
    xmlns:f="sap.ui.layout.form"
    xmlns:l="sap.ui.layout"
>
    <Dialog
        id="newItemDialog"
        title="{i18n>ProductDetail}"
        icon="sap-icon://product"
        class="sapUiSizeCompact"
        draggable="true"
        resizable="true"
        ariaLabelledBy="newDialogTitle"
    >
        <content>
            <f:SimpleForm
                id="newProductForm"
                editable="true"
                layout="ResponsiveGridLayout"
                labelSpanXL="4"
                labelSpanL="4"
                labelSpanM="4"
                labelSpanS="12"
                adjustLabelSpan="false"
                columnsXL="1"
                columnsL="1"
                columnsM="1"
                singleContainerFullSize="false"
                width="30rem"
            >
                <Label
                    id="newDialogTitle"
                    text="{i18n>ProductDetail}"
                    visible="false"
                />
                <Label
                    id="lblNewProductId"
                    text="{i18n>ProductId}"
                    required="true"
                />
                <Input
                    value="{NewProductModel>Product}"
                    required="true"
                    ariaLabelledBy="lblNewProductId"
                />

                <Label
                    id="lblNewProductName"
                    text="{i18n>ProductName}"
                    required="true"
                />
                <Input
                    value="{NewProductModel>Name}"
                    required="true"
                    ariaLabelledBy="lblNewProductName"
                />

                <Label
                    id="lblNewProductPrice"
                    text="{i18n>ProductPrice}"
                    required="true"
                />
                <Input
                    value="{NewProductModel>Price}"
                    type="Number"
                    required="true"
                    valueLiveUpdate="true"
                    ariaLabelledBy="lblNewProductPrice"
                />

                <Label
                    id="lblNewProductCurrency"
                    text="{i18n>ProductCurrency}"
                    required="true"
                />
                <ComboBox
                    selectedKey="{NewProductModel>Currency}"
                    placeholder="{i18n>selectCurrencyPlaceholder}"
                    showSecondaryValues="true"
                    required="true"
                    ariaLabelledBy="lblNewProductCurrency"
                >
                    <items>
                        <c:ListItem
                            key="EUR"
                            text="EUR"
                            additionalText="{i18n>EUR}"
                        />
                        <c:ListItem
                            key="USD"
                            text="USD"
                            additionalText="{i18n>USD}"
                        />
                        <c:ListItem
                            key="COP"
                            text="COP"
                            additionalText="{i18n>COP}"
                        />
                    </items>
                </ComboBox>
            </f:SimpleForm>
        </content>

        <beginButton>
            <Button
                text="{i18n>newItemDialogCreateBtn}"
                type="Emphasized"
                press=".onPressSaveData"
                tooltip="{i18n>createProductDialogTooltip}"
            />
        </beginButton>
        <endButton>
            <Button
                text="{i18n>Cancel}"
                press=".onCloseAddItemDialog"
                tooltip="{i18n>cancelProductCreateDialogTooltip}"
            />
        </endButton>
    </Dialog>
</c:FragmentDefinition>
