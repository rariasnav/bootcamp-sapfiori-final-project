<c:FragmentDefinition
    xmlns="sap.ui.table"
    xmlns:m="sap.m"
    xmlns:c="sap.ui.core"
>
    <Table
        id="productsTableId"
        rows="{ProductsModel>/}"
        selectionMode="Single"
        selectionBehavior="RowOnly"
        visibleRowCount="0"
        rowSelectionChange="onProductSelect"
    >
        <columns>
            <Column
                sortProperty="Product"
                filterProperty="Product"
            >
                <m:Label text="{i18n>ProductId}" />
                <template>
                    <m:Text text="{ProductsModel>Product}" />
                </template>
            </Column>

            <Column
                sortProperty="Name"
                filterProperty="Name"
            >
                <m:Label text="{i18n>ProductName}" />
                <template>
                    <m:Text text="{ProductsModel>Name}" />
                </template>
            </Column>

            <Column
                sortProperty="Price"
                filterProperty="Price"
            >
                <m:Label text="{i18n>ProductPrice}" />
                <template>
                    <m:ObjectNumber
                        number="{ProductsModel>Price}"
                        unit="{ProductsModel>Currency}"
                    />
                </template>
            </Column>
        </columns>
    </Table>
</c:FragmentDefinition>
